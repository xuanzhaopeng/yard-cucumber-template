<% if @elements && !@elements.empty? %>
  <% i = (@elements.length % 2 == 0 ? 1 : 0) %>
  <table style="margin-left: 10px; width: 100%;">
    <tr>
      <td valign='top' width="50%">
        <% @elements.each do |key, objects| %>
          <% if (i += 1) > (@elements.length / 2 + 1) %>
          </td><td valign='top' width="50%">
            <% i = 0 %>
          <% end %>
          <ul id="alpha_<%= key %>" class="alpha">
            <li class="letter"><%= key %></li>
            <ul>
			   <% if objects.kind_of? Array %>
					<% objects.each do |obj| %>
						<li>
							<%= linkify obj, obj.value %>
							<small>(<%= obj.file %>)</small>
						</li>
					<% end %>
				<% else %>
					<% objects.each do |key2, obj2| %>
						<li class="letter2"><%= key2 %></li>
						<ul>
							<% obj2.each do |obj3| %>
								<li>
									<%= linkify obj3, obj3.value %>
									<small>(<%= obj3.file %>)</small>
								</li>
							<% end %>
						</ul>
					<% end %>
				<% end %>
            </ul>
          </ul>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>
